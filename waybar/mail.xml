<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkMenu" id="menu">
{%@@ for account in mail @@%}
     <child>
       <object class="GtkMenuItem" id="{{@@ account @@}}">
               <property name="label">{{@@ account @@}}</property>
        </object>
     </child>
{%@@ endfor @@%}
    <child>
      <object class="GtkSeparatorMenuItem" id="delimiter"/>
    </child>
    <child>
          <object class="GtkMenuItem" id="sync">
               <property name="label">sync</property>
          </object>
    </child>
  </object>
</interface>
